<div class="row justify-content-center mt-5">
  <div class="col-10">
    <%= form_with(model: @admin, url: admin_path, method: :patch, html: { multipart: true }, local: true, class: "shadow p-3 mb-3 bg-light rounded") do |f| %>

      <div class="form-group row">
        <%= f.label :admin_id, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.collection_select :admin_id, Admin.all, :id, :name %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :rights_to_books, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.check_box :rights_to_books %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :rights_to_categories, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.check_box :rights_to_categories %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="d-grid gap-2 col-2 mx-auto">
          <%= f.submit "Select", class: "btn btn-outline-dark btn-lg shadow mb-5 bg-white rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>