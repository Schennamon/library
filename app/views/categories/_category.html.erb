<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @categories.each do |category| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-center"><%= category.name %></h5>
            <%= link_to content_tag(:span, ""), category %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

