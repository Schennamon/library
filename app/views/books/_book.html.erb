<div class="container">
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% @books.each do |book| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-title">
              Title: 
              <%= link_to book.title, book, class: "text-decoration-none text-reset" %>
            </p>

            <% if !book.categories.empty? %>
              <p>
                <% if book.categories.count > 1 %>
                  Categories:
                <% else %>
                  Category:
                <% end %>
                <% book.categories.each do |category| %>
                  <%= category.name %><% if category != book.categories.last %>,<% end %>
                <% end %>
              </p>
            <% end %>
            <div class="d-flex justify-content-center align-items-center">
              <div class="btn-group text-center">
                <%= button_to "View", book, method: :get, class: "btn btn-sm btn-outline-success me-2" %>

                <% if logged_in? %>
                  <%= button_to "Edit", edit_book_path(book), method: :get, class: "btn btn-sm btn-outline-info me-2" %>
                  <%= button_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
