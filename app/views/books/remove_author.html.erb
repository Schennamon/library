<div class="row justify-content-center mt-5">
  <div class="col-10">
    <%= form_with(model: @book, url: books_destroy_book_author_path, html: { multipart: true }, local: true, class: "shadow p-3 mb-3 bg-light rounded") do |f| %>

      <%= hidden_field_tag(:book_id, params[:format]) %>

      <div class="form-group row">
        <%= f.label :author_id, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.collection_select :author_id, Book.find(params[:format]).authors, :id, :name %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="d-grid gap-2 col-2 mx-auto">
          <%= f.submit "Remove", class: "btn btn-outline-dark btn-lg shadow mb-5 bg-white rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>