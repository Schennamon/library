<div class="row justify-content-center mt-5">
  <div class="col-10">
    <%= form_with(model: @book, url: book_path(id: params[:book_id]), method: :patch, html: { multipart: true }, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow mb-5 bg-white rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :author_id, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.collection_select :author_id, Author.all, :id, :name %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="d-grid gap-2 col-2 mx-auto">
          <%= f.submit class: "btn btn-outline-dark btn-lg shadow mb-5 bg-white rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>